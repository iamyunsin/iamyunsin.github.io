---
interface Props {
  'class'?: string;
}

const className = Astro.props[`class`];
---

<h3 class={`card-title ${className}`}>
  <slot></slot>
</h3>
<style lang="less">
  .card-title {
    width: 100%;
    height: 18px;
    display: flex;
    align-items: center;
    font-size: 14px;
    font-weight: 500;
    gap: 6px;
    padding: 12px 0 18px;
    border-bottom: 1px dashed #E0E0E0;
    &::before {
      content: ' ';
      display: block;
      width: 4px;
      height: 18px;
      background-color: #3b82f6;
    }
  }
</style>
