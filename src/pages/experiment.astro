---
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { SITE, EXPERIMENTS } from '@/consts';
import BodyWrapper from '@/components/BodyWrapper.astro';
import Card from '@/components/Card.astro';
import CardTitle from '@/components/CardTitle.astro';
import UList from '@/components/OutLinkList.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="小实验·原心的个人主页" description={SITE.description} />
	</head>
	<body>
		<Header />
		<BodyWrapper >
      <section class="grid grid-cols-3 lt-lg:grid-cols-2 lt-md:grid-cols-1 gap-12">
        {EXPERIMENTS.map((item) => (
          <Card>
            <CardTitle>{item.name}</CardTitle>
            <UList items={item.list}/>
          </Card>
        ))}
      </section>
		</BodyWrapper>
		<Footer />
	</body>
</html>
